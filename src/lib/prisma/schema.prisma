datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(uuid()) @db.Uuid
  telegram_id  BigInt   @unique
  first_name   String
  last_name    String?  @db.Text
  username     String?  @db.Text
  photo_url    String?  @db.Text
  auth_date    BigInt
  hash         String
  last_login   DateTime? @default(now()) @db.Timestamptz(6)
  created_at   DateTime  @default(now()) @db.Timestamptz(6)
  updated_at   DateTime  @default(now()) @updatedAt @db.Timestamptz(6)
  is_admin     Boolean   @default(false)
  access_till  DateTime? @db.Timestamptz(6)

  @@index([telegram_id], name: "users_telegram_id_idx")
}

model WebhookLog {
  id              String           @id @default(uuid()) @db.Uuid
  endpoint        String
  request_method  String
  request_headers Json?            @db.JsonB
  request_body    Json?            @db.JsonB
  response_status Int?
  response_body   String?
  created_at      DateTime         @default(now()) @db.Timestamptz(6)
}